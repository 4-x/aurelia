{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/*"
            ],
            "@aurelia/debug": [
                "../../packages/debug"
            ],
            "@aurelia/jit-nativescript": [
                "../../packages/jit-nativescript"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}