{
  "extends": "../tsconfig-build.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist/umd",
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "alwaysStrict": true,
    "jsx": "react",
    "jsxFactory": "hJsx",
    "types": [
      "node",
      "mocha",
      "webpack-env"
    ],
    "module": "umd"
  },
  "include": [
    "."
  ],
  "exclude": [
    "router/e2e",
    "dist",
    "e2e"
  ]
}