{
  "name": "api-doc-generator",
  "version": "0.5.0",
  "description": "Aurelia API document generator",
  "private": true,
  "license": "MIT",
  "author": "Hamed Fathi <hamedfathi.contact@gmail.com>",
  "homepage": "https://aurelia.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/aurelia/aurelia"
  },
  "scripts": {
    "build": "./node_modules/.bin/gulp build",
    "clean": "node scripts/del.js",
    "make-index": "npm run clean & node scripts/make-index.js",
    "test-watch": "npm run clean & mocha  -r  scripts/tshook.js --watch-extensions ts --watch -R min --timeout 10000 test/**/*.spec.ts",
    "test": "npm run clean & mocha -r  scripts/tshook.js --timeout 10000 test/**/*.spec.ts",
    "coverage": "npm run clean & nyc -r lcov -e .ts -x \"*.ts\" mocha  -r  scripts/tshook.js --timeout 10000 test/**/*.spec.ts && nyc report",
    "eslint": "./node_modules/.bin/eslint --fix ./src/**/**/*.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "clover",
      "json"
    ],
    "all": true
  },
  "dependencies": {
    "directory-tree": "^2.2.4",
    "fast-safe-stringify": "^2.0.7",
    "lodash": "4.17.15",
    "markdown-table": "^1.1.3",
    "nunjucks": "^3.2.0",
    "parse5-htmlparser2-tree-adapter": "^5.1.1",
    "parse5-traverse": "^1.0.3",
    "parse5": "^5.1.1",
    "prettier": "^1.19.1",
    "traverse": "^0.6.6",
    "ts-morph": "^5.0.0"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.12.16",
    "@types/chai": "^4.2.7",
    "@types/fs-extra": "^8.0.1",
    "@types/gulp": "^4.0.6",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.21",
    "@types/nunjucks": "^3.1.3",
    "@types/parse5-htmlparser2-tree-adapter": "^5.0.1",
    "@types/parse5": "^5.0.2",
    "@types/prettier": "^1.19.0",
    "@types/sinon-chai": "^3.2.3",
    "@types/sinon": "^7.5.1",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint": "^6.8.0",
    "fs-extra": "^8.1.0",
    "gulp-clean": "^0.4.0",
    "gulp-typescript": "^5.0.1",
    "gulp": "^4.0.2",
    "jsdoc-to-markdown": "^5.0.3",
    "mocha-sinon": "^2.1.0",
    "mocha": "~6.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "source-map-support": "^0.5.16",
    "statman-stopwatch": "^2.11.1",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  }
}
